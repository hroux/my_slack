#ifndef __MY_SLACK_CLIENT_H__
#define __MY_SLACK_CLIENT_H__

#include "../../libs/libmy/libmy_extended.h"
#include <stdlib.h>

typedef struct	s_client
{
  char		*ip;
  char		*port;
  void		(*free)(struct s_client*);
}		t_client;

t_client	*create_client();
void		free_client(t_client *client);

