CC	=	gcc
NAME	=	liblog
SRC	=	main.c \
		logger.c \
		loglevel.c \
		logconfig.c \
		logger_fn_1.c
OBJ	=	$(SRC:%.c=%.o)
RM	=	rm -rf
LIBS	=	../libprintf/libprintf.a
SNAME	=	liblog.a
DNAME	=	liblog.so
CFLAGS	=	-Wall -Wextra -Werror -g -fPIC -lm

ALL	:	$(NAME) clean

$(NAME)	:	$(OBJ)
		$(CC) $(OBJ) $(LIBS) -o $(NAME) $(CFLAGS)

lib	:	$(OBJ)
		ar r $(SNAME) $(OBJ)
		ranlib $(SNAME)
		$(CC) -o $(DNAME) $(OBJ) -shared

clean	:
		$(RM) $(OBJ)

fclean	:	clean
		$(RM) $(NAME) $(SNAME) $(DNAME)

re	:	fclean ALL

.PHONY	:	fclean
